# Stage 1: Build với Maven
FROM maven:3.9.6-eclipse-temurin-17 AS build
WORKDIR /app

# Copy file cấu hình và source code
COPY pom.xml .
COPY src ./src

# Build ra file WAR (bỏ qua test cho nhanh)
RUN mvn clean package -DskipTests

# Stage 2: Run với Tomcat 9
FROM tomcat:9.0-jdk17-temurin

# Xoá các webapp mặc định của Tomcat
RUN rm -rf /usr/local/tomcat/webapps/*

# Copy file WAR từ stage build vào Tomcat (deploy làm ROOT)
COPY --from=build /app/target/*.war /usr/local/tomcat/webapps/ROOT.war

# Expose cổng 8080 cho Render
EXPOSE 8080

# Chạy Tomcat
CMD ["catalina.sh", "run"]
